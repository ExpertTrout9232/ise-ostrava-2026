# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[{src/**/*.{html,css,js,xml},src/.htaccess,.github/**/*,.husky/**/*,.vscode/**/*,package.json,eslint.config.js,.prettierrc,.prettierignore,.gitignore,.editorconfig}]
end_of_line = lf
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
